{
  "compilerOptions": {
    "module": "Commonjs",
    "moduleResolution": "Node",
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["../src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
